<%= form_for(@resume, :html => { :multipart => true}) do |f| %>
	<div class="control-group">
   <%= f.label :jobtitle %><br />
    <div class="controls">
    <%= f.text_field :jobtitle %>
 		</div>
 		</div>

 		<div class="control-group">
    <%= f.label :resumetext %><br />
     <div class="controls">
    <%= f.text_field :resumetext %>
 		</div>
 		</div>

 		<div class="control-group">
   <%= f.label :resumeimage %><br />
   <div class="controls">
   <%= f.file_field :resumeimage %>
   </div>
 		</div>

    <%= f.submit %>

<% end %>